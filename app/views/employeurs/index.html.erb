<% if notice  %>
  <div class="alert alert-success animated slideInDown" role="alert">
    <%= notice %>
  </div>
<% end %>
<table class="table table-hover table-borderless">
  <thead>
    <tr>
      <th><%= fa_icon('user') %> Nom</th>
      <th><%= fa_icon('barcode') %> Siret</th>
      <th><%= fa_icon('map-marker') %> Adresse</th>
      <th><%= fa_icon('barcode') %> Code postal</th>
      <th><%= fa_icon('institution') %> Ville</th>
      <th><%= fa_icon('phone') %> Tel</th>
      <th><%= fa_icon('envelope') %> Email</th>
      <th><%= fa_icon('envelope') %> Email2</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @employeurs.each do |employeur| %>
      <tr>
        <td><span class="badge badge-pill badge-<%= employeur.color %>"><%= employeur.nom %></span></td>
        <td><%= employeur.siret %></td>
        <td><%= employeur.adresse %></td>
        <td><%= employeur.cp %></td>
        <td><%= employeur.ville %></td>
        <td><%= employeur.tel %></td>
        <td><%= employeur.email %></td>
        <td><%= employeur.email2 %></td>
        <td><%= link_to 'Modifier', edit_employeur_path(employeur) %></td>
        <td><%= link_to 'DÃ©truire', employeur, method: :delete, data: { confirm: 'Are you sure?' }, class: 'text-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
