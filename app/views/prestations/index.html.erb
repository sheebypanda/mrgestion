<% if notice  %>
  <div class="alert alert-success animated slideInDown" role="alert">
    <%= notice %>
  </div>
<% end %>
<table class="table table-hover table-borderless">
  <thead>
    <tr>
      <th><%= fa_icon('user') %> Employeur</th>
      <th><%= fa_icon('user-o') %> Client</th>
      <th><%= fa_icon('truck') %> Machine</th>
      <th><%= fa_icon('hourglass-start') %> Début</th>
      <th><%= fa_icon('hourglass-end') %> Fin</th>
      <th><%= fa_icon('') %> Nbjour</th>
      <th><%= fa_icon('clock-o') %>hsup'</th>
      <th><%= fa_icon('map-marker') %> Adresse</th>
      <th><%= fa_icon('institution') %>Ville</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @prestations.each do |prestation| %>
      <tr>
        <td><%= prestation.employeur.nom %></td>
        <td><%= prestation.client.nom %></td>
        <td><%= prestation.machine.marque %> <%= prestation.machine.modele %>, <%= prestation.machine.poids %></td>
        <td><%= l(prestation.debut, format: '%d/%m/%y')  %></td>
        <td><%= l(prestation.fin, format: '%d/%m/%y')  %></td>
        <td><%= prestation.nbjour %></td>
        <td><%= prestation.hsup %></td>
        <td><%= prestation.adresse %></td>
        <td><%= prestation.ville %></td>
        <td><%= link_to 'Modifier', edit_prestation_path(prestation) %></td>
        <td><%= link_to 'Détruire', prestation, method: :delete, data: { confirm: 'Are you sure?' }, class:'text-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= month_calendar events: @prestations  do |date, prestations| %>
  <%= date.day %>
  <% prestations.each do |p| %>
    <div><span class="badge badge-warning"><%= fa_icon('user') %> <%= p.employeur.nom %><span class="badge badge-warning"></div>
    <div><span class="badge badge-secondary"><%= fa_icon('map-marker') %> <%= p.adresse %> <%= p.ville %><span class="badge badge-warning"></div>
  <% end %>
<% end %>
